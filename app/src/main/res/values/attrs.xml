<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StickerView">
        <attr name="showIcons" format="boolean" />
        <attr name="showBorder" format="boolean" />
        <attr name="bringToFrontCurrentSticker" format="boolean" />
        <attr name="borderColor" format="color" />
        <attr name="borderAlpha" format="integer" />
    </declare-styleable>

    //自定义颜色圆
    <declare-styleable name="SetCircle">
        <attr name="showColor" format="color" />
        <attr name="radius" format="float" />

    </declare-styleable>
    <declare-styleable name="StockManage">

        <attr name="width" format="dimension" /><!-- 宽度 -->
        <attr name="height" format="dimension" /><!-- 高度 -->
        <attr name="inColor" format="color" /><!-- 圈内颜色 -->
        <attr name="outColor" format="color" /><!-- 圈外颜色 -->
        <attr name="textColor" format="color" /><!-- 颜色-->
        <attr name="stroke" format="dimension" /><!-- 圆圈的宽度 -->
        <attr name="textSize" format="dimension" /><!-- 字体大小 -->
        <attr name="text" format="string" /><!-- 字 -->
        <attr name="icon" format="reference" /><!-- 图片 -->
    </declare-styleable>

    <!--循环轮播的color-->
    <declare-styleable name="LooperViewPager">
        <attr name="looperViewpager_focus_color" format="color" />
        <attr name="looperViewpager_normal_color" format="color" />
    </declare-styleable>
    <declare-styleable name="LoopView">
        <attr name="view_gravity">
            <enum name="center" value="17" />
            <enum name="left" value="3" />
            <enum name="right" value="5" />
        </attr>
        <attr name="lineColor" format="color" />
        <attr name="topBottomTextColor" format="color" />
        <attr name="centerTextColor" format="color" />
        <attr name="canLoop" format="boolean" />
        <attr name="initPosition" format="integer" />
        <attr name="drawItemCount" format="integer" />
        <attr name="textSizes" format="dimension" /><!-- 字体大小 -->
        <attr name="lineSpacingMultiplier" format="float" />
    </declare-styleable>
</resources>