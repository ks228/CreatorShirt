<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.yf.creatorshirt.mvp.ui.activity.DetailDesignActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <RelativeLayout
        android:id="@+id/rl_clothes_root"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_below="@+id/app_bar"
        android:background="@null">

        <RelativeLayout
            android:id="@+id/clothes_pattern_bounds"
            android:layout_width="120dp"
            android:layout_height="190dp"
            android:layout_centerInParent="true"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="190dp"
                android:layout_centerInParent="true"
                android:src="@drawable/shape_clothe_pattern" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shape_clothe_pattern"
                android:gravity="center"
                android:padding="2dp"
                android:text="图案请放在虚线框内"
                android:textColor="@color/manatee"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/clothes_signature"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="85dp"
            android:layout_marginRight="88dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/shape_clothe_pattern"
            android:gravity="center"
            android:textColor="@color/goldenpoppy"
            android:textSize="14sp"
            android:visibility="gone" />

            <ImageView
                android:id="@+id/clothes_container_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                android:src="@mipmap/man_t_shirt" />

        <ImageView
            android:id="@+id/choice_select_neck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_circle_neck"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/choice_ornament"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/ornament"
            android:visibility="gone" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/choice_front_back"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_clothes_root"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/clothes_front"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_clothe_button"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="正面"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/clothes_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/clothes_front"
            android:layout_weight="1"
            android:background="@drawable/shape_clothe_button"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="反面"
            android:textSize="15sp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/choice_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_choice_finish"
        android:layout_below="@id/choice_front_back"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="15dp"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/design_choice_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_choice_back"
        android:layout_below="@+id/choice_front_back"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="15dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_choice_finish"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="visible" />


    <LinearLayout
        android:id="@+id/ll_choice_back"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/choice_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/choice_delete" />

        <ImageView
            android:id="@+id/choice_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/choice" />
    </LinearLayout>

</RelativeLayout>
