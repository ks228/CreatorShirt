<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yf.creatorshirt.mvp.ui.activity.MyOrderActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/app_bar"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="收货地址"
            android:textColor="@color/darkjunglegreen"
            android:textSize="@dimen/order_text_size" />


        <View
            android:id="@+id/view_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/platinum" />

        <RelativeLayout
            android:id="@+id/rl_receiver"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/view_line"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/order_receiver_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="张芷溪"
                android:layout_marginLeft="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:textSize="@dimen/order_text_size" />

            <TextView
                android:id="@+id/order_receiver_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="1555555555"
                android:layout_marginRight="5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/order_text_size" />

            <TextView
                android:id="@+id/order_receiver_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_receiver_email"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:drawableRight="@mipmap/address_forward"
                android:text="中国重庆中国重庆中国重庆中国重庆中国重庆中国重庆中国重庆中国重庆"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/order_receiver_address"
            android:background="@color/platinum" />

        <TextView
            android:id="@+id/clothes_pay_way"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/view_line2"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="支付方式"
            android:textColor="@color/darkjunglegreen"
            android:textSize="@dimen/order_text_size" />

        <View
            android:id="@+id/view_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/clothes_pay_way"
            android:background="@color/platinum" />

        <RelativeLayout
            android:id="@+id/rl_alipay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/view_line3"
            android:layout_weight="1">

            <RadioButton
                android:text="支付宝"
                android:textSize="16sp"
                android:id="@+id/pay_alipay"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:id="@+id/view_line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_alipay"
            android:layout_marginLeft="10dp"
            android:background="@color/platinum" />

        <RelativeLayout
            android:id="@+id/rl_weichat_pay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/rl_alipay"
            android:layout_marginTop="3dp"
            android:layout_weight="1">

            <RadioButton
                android:layout_marginLeft="10dp"
                android:id="@+id/pay_weixin"
                android:text="微信支付"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:id="@+id/view_line5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_weichat_pay"
            android:background="@color/platinum" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/view_line5"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_detail_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="@string/detail_order"
            android:textColor="@color/darkjunglegreen"
            android:textSize="@dimen/order_text_size" />

        <View
            android:id="@+id/view_line6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_detail_order"
            android:layout_marginTop="3dp"
            android:background="@color/ashgrey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pay_for_money"
            android:layout_below="@+id/view_line6"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/clothes_picture"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/man_t_shirt" />

            <LinearLayout
                android:id="@+id/ll_clothes_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/clothes_picture"
                android:layout_toRightOf="@+id/clothes_picture"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="定制"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/clothes_sex_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_create"
                    android:layout_marginTop="5dp"
                    android:text="女-上衣 T恤"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/clothes_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="商品ID: 10892473"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/order_clothes_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="尺寸：XL"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/clothes_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="颜色"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_freight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="运费"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/order_clothes_prices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="￥49.99"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/order_clothes_prices"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/order_clothes_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:src="@mipmap/minus" />

                <TextView
                    android:id="@+id/order_clothes_numbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/order_clothes_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:src="@mipmap/add" />
            </LinearLayout>

            <TextView
                android:id="@+id/order_clothes_freight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ll_clothes_order"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="￥0.00" />

            <TextView
                android:id="@+id/tv_clothes_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/clothes_picture"
                android:layout_toRightOf="@+id/clothes_picture"
                android:text="总计"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/order_total_prices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_clothes_total"
                android:layout_marginRight="20dp"
                android:text="￥49.99"
                android:textSize="18sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/pay_for_money"
            style="@style/common_start_btn"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:text="结算付款" />
    </RelativeLayout>
</LinearLayout>
