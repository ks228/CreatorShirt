<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:gravity="center"
    android:background="@drawable/clothe_style_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/design_icon_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:src="@mipmap/icon_select_longarm" />

    <TextView
        android:id="@+id/design_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/design_icon_style"
        android:layout_centerInParent="true"
        android:layout_marginTop="3dp"
        android:text="衣领" />
</RelativeLayout>