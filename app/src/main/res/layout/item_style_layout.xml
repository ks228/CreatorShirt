<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1.5dp"
    android:background="@drawable/sex_clothes_background"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/design_icon_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_select_longarm" />

    <TextView
        android:id="@+id/design_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="衣领"
        android:textSize="14.0sp" />

    <TextView
        android:id="@+id/more_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取更多"
        android:gravity="bottom"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textColor="@color/bg_btn_update"
        android:textSize="14sp"
        android:visibility="gone" />
</LinearLayout>