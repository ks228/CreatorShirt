<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F4F9">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <RelativeLayout
        android:id="@+id/my_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_order_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-05-17 12:12:12"
                android:textColor="@color/black_1" />

        </RelativeLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_order_state"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="3dp"
            android:background="@color/gainsboro" />

        <ImageView
            android:id="@+id/clothes_picture"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_below="@+id/view_line"
            android:layout_marginLeft="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/man_t_shirt" />

        <RelativeLayout
            android:id="@+id/ll_clothes_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_line"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/clothes_picture"
            android:layout_toRightOf="@+id/clothes_picture">

            <TextView
                android:id="@+id/tv_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的定制—T恤"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/order_clothes_prices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="￥49.99"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_clothes_order"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/clothes_picture"
            android:layout_toRightOf="@+id/clothes_picture">

            <TextView
                android:id="@+id/clothes_sex_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="类型：短袖圆领"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/clothes_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_number"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/clothes_picture"
            android:layout_toRightOf="@+id/clothes_picture"
            android:text="颜色：黑色"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/order_clothes_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clothes_color"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/clothes_picture"
            android:layout_toRightOf="@+id/clothes_picture"
            android:text="文字：乱输入的文字"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_order"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_my_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="我的订单"
            android:textColor="@color/black_1"
            android:textSize="15sp" />

        <View
            android:id="@+id/view_line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="3dp"
            android:background="@color/gainsboro" />

        <android.support.v7.widget.RecyclerView
            android:layout_margin="3dp"
            android:id="@+id/detail_order_recy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/add_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/add"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="新增订单"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="合计:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_total"
            android:text=" ¥49.99"
            android:textColor="@color/red_e73a3d"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/confirm_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/choice_size_background"
            android:padding="10dp"
            android:text="确认并支付" />
    </RelativeLayout>
</RelativeLayout>