<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/choice_default_address"
            android:text="张芷溪"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/address_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/edit_address_btn"
            android:text="15868178345"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_name"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/edit_address_btn"
            android:layout_toRightOf="@+id/choice_default_address"
            android:text="中国重庆中国重庆中国重庆中国重庆中国重庆中国重庆中国重庆中国重庆中国重庆"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/choice_default_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:padding="1dp"
            android:src="@mipmap/choice_not_address" />


        <ImageView
            android:id="@+id/edit_address_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:padding="1dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@mipmap/choice_edit_address" />
    </RelativeLayout>


    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_address"
        android:layout_marginTop="8dp"
        android:background="@color/platinum" />

</RelativeLayout>
