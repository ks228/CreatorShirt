<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar_title" />

    <TextView
        android:id="@+id/sex_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="STEP 1: 性别选择"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sex_choice"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="3dp">


        <RelativeLayout
            android:id="@+id/choice_man"
            style="@style/sex_container_style">

            <TextView
                android:id="@+id/man_cloth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableTop="@mipmap/icon_men"
                android:gravity="center"
                android:text="男装"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/man_cloth"
                android:layout_marginTop="2dp"
                android:text=""
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/choice_woman"
            style="@style/sex_container_style">

            <TextView
                android:id="@+id/woman_cloth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableTop="@mipmap/icon_lady"
                android:gravity="center"
                android:text="女装"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/woman_cloth"
                android:layout_marginTop="2dp"
                android:text=""
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/clothe_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sex"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="STEP 2: 选款式"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clothe_style"
        android:orientation="horizontal"
        android:padding="3dp">

        <RelativeLayout
            android:id="@+id/choice_t_shirt"
            style="@style/sex_container_style">

            <TextView
                android:id="@+id/t_shirt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/icon_t_shirt"
                android:gravity="center"
                android:text="T恤"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t_shirt"
                android:layout_marginTop="2dp"
                android:text="全棉材质"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/choice_shirts"
            style="@style/sex_container_style">

            <TextView
                android:id="@+id/shirts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/icon_shirts"
                android:gravity="center"
                android:text="衬衫"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shirts"
                android:layout_marginTop="2dp"
                android:text="全棉材质"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_start"
        style="@style/common_start_btn"
        android:layout_margin="10dp"
        android:text="开始设计" />

</RelativeLayout>